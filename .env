# -------------------------------
# Configuración de Autenticación JWT
# -------------------------------
JWT_SECRET=tu_clave_secreta_compleja_y_ultrasegura
JWT_EXPIRES_IN=1h

# -------------------------------
# Configuración de Base de Datos (PostgreSQL)
# -------------------------------
# Formato URL (para TypeORM/Prisma)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/casino

# Variables individuales (para configuración modular)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=casino
DB_SCHEMA=public
DB_SSL=false

# -------------------------------
# Configuración de Microservicios
# -------------------------------
# Desarrollo Local (localhost)
AUTH_SERVICE_HOST=localhost
AUTH_SERVICE_PORT=3002

GAME_SERVICE_HOST=localhost
GAME_SERVICE_PORT=3001

NOTIFICATION_SERVICE_HOST=localhost
NOTIFICATION_SERVICE_PORT=3003

TRANSACTION_SERVICE_HOST=localhost
TRANSACTION_SERVICE_PORT=3004

# -------------------------------
# Configuración General
# -------------------------------
NODE_ENV=development
APP_PORT=3000
LOG_LEVEL=debug